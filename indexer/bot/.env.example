# CLOB Matching Bot Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Bot wallet mnemonic (24 words)
# Generate a new wallet: elysd keys add bot --recover
BOT_MNEMONIC="your twelve or twenty four word mnemonic phrase goes here keep it secret keep it safe"

# Bot configuration
BOT_ENGINE_ID=matching-bot-prod-1
BOT_MATCHING_INTERVAL=1s
BOT_MAX_BATCH_SIZE=20
BOT_MIN_PROFIT_BPS=5  # 0.05% minimum profit

# Chain configuration
CHAIN_ID=elys-1
CHAIN_RPC_ENDPOINT=https://rpc.elys.network:443
CHAIN_GRPC_ENDPOINT=grpc.elys.network:443
CHAIN_GAS_PRICE=0.01uelys
CHAIN_GAS_LIMIT=1000000
CHAIN_DENOM=uelys

# Indexer configuration
INDEXER_URL=https://indexer.elys.network

# Markets to monitor (comma-separated list in JSON array format)
MARKETS=[1,2,3,4,5]

# Optional: Account info (fetched automatically if not set)
# BOT_ACCOUNT_NUMBER=123
# BOT_ACCOUNT_SEQUENCE=456